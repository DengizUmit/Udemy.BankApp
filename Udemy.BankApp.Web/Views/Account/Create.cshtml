@model  ApplicationUser

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <h3>Information of the person to be added to the account</h3>
        <p>
            User Name : @Model.Name
        </p>
        <p>
            User Surname : @Model.Surname
        </p>
        <p>
            Number of active accounts of the user : <getAccountCount application-user-id="@Model.Id"></getAccountCount>
        </p>
    </div>
    <div class="col-3">
        <h4>Adding Process</h4>
    </div>
</div>